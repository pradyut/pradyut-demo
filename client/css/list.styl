// Dashboard and Fund Details list elements

.workspace        
  .heading
    font-size 1.2em
    color black
    font-weight bold
    
  > ul
    margin-top 10px
    width 100%
    list-style-type none
    
    .li-stock-data
      span
        margin-right 8px
    > li
      background background-grey
      color light-text-grey
      height: 18px;
      padding 14px;
      margin-bottom 6px;
      position: relative
      .span-fund-name
        &:after
          content '\22EF'
          font-size 1.5em
          right 10px
          position absolute
          text-decoration none
      // Menu controls
      .collapse{
        cursor: pointer;
        // display: block;
      }
      .collapse + input{
        display: none; /* hide the checkboxes */
      }
      .collapse + input + .menu
          display:none;
      
      .collapse + input:checked + .menu
          display:block;
      .menu
        position absolute
        top 0
        right 0
        background white
        
        width 80px
        box-shadow: 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22)
        z-index 999
        ul
          list-style-type none
          width 100%
          height 100%
          
          li
            color app-blue
            padding 6px
            border-top 1px dotted light-text-grey
            cursor pointer
            a
              text-decoration none
              color app-blue
              &:hover
                cursor: pointer
            &:first-child
              color light-text-grey
              font-size: 1.3em;
              text-align right