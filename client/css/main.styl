@import 'colors'

body
  font-family 'Open Sans', sans-serif
  font-size 16px
  
  #container
    width 960px
    margin 0 auto
    .main
      padding 100px 250px
      .top-bar
        position relative
        margin-bottom 50px
        .heading
          font-size 2em
          color text-grey
        .link-home
          color light-text-grey
          a
            color app-blue
            text-decoration none
        button
          position absolute
          right 0px
          &:before
            content '+'
            font-size 1.5em
            color white
            background app-blue
            margin-right 3px
            padding 0px
            width 17px
            display inline-block;
  button, input[type=submit]
    font-size 0.5em
    border 2px solid app-blue
    background white
    font-weight bold
    color app-blue
    margin 0
    padding 0
    cursor pointer
    a
      text-decoration none
      color app-blue
    span
      font-size 1.5em
      margin 4px
    
                      
                
                
              
              
            